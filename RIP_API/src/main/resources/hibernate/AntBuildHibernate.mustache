<project name="Hibernate File Generator" basedir="." default="hibernate_gen">
    <property name="hibernate.lib" value="{{hibernateToolsPath}}">
    </property>

    <taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask">
        <classpath>
            <fileset dir="${hibernate.lib}">
                <include name="**/*.jar"/>
            </fileset>
        </classpath>
    </taskdef>

    <target name="hibernate_gen" description="Generate Hibernate Classes">
        <hibernatetool>
            <configuration propertyfile="hbm/hibernate.properties">
                <fileset dir="hbm">
                    <include name="**/*.hbm.xml"/>
                </fileset>
            </configuration>
            <hbm2java ejb3="true" jdk5="true" destdir="src/main/java"/>
            <hbm2doc destdir="../Docs/Database Doc"/>
        </hibernatetool>
    </target>

</project>